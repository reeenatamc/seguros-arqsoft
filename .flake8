# ============================================
# Configuración de Flake8
# ============================================
# Flake8 es un linter que verifica el estilo y calidad del código Python

[flake8]

# Longitud máxima de línea
max-line-length = 120

# Complejidad ciclomática máxima (McCabe)
max-complexity = 10

# Archivos y directorios a excluir
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    */migrations/*,
    */static/*,
    */media/*,
    staticfiles,
    */tests/*,
    .tox,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    app/management/commands/poblar_datos_prueba.py,
    validate-pipeline-complete.py

# Códigos de error a ignorar
ignore =
    # E203: whitespace before ':' (conflicto con black)
    E203,
    # E501: line too long (ya manejado por max-line-length)
    E501,
    # W503: line break before binary operator (preferencia de estilo)
    W503,
    # E231: missing whitespace after ',' (conflicto con black)
    E231,
    # D100-D107: Missing docstrings (opcional en proyecto)
    D100, D101, D102, D103, D104, D105, D107,
    # B007: Loop control variable not used (aceptable en algunos casos)
    B007,
    # B008: Function calls in defaults (patrón común en Django)
    B008,
    # B014: Redundant exception types (no crítico)
    B014,
    # C414: Unnecessary list call (estilo)
    C414,
    # C901: Function too complex (funciona correctamente)
    C901,
    # F401: Imports not used (necesarios para type hints y re-exports)
    F401,
    # SIM*: Simplificaciones sugeridas (opcionales)
    SIM102, SIM105, SIM113, SIM114, SIM115, SIM117

# Códigos específicos a verificar (E y F son los principales)
select = E,F,W,C,B,S

# Mostrar el código fuente del error
show-source = True

# Mostrar estadísticas
statistics = True

# Contar errores
count = True

# Formato de output
format = default

# Configuración de plugins
# ============================================

# flake8-docstrings (pydocstyle)
docstring-convention = google

# flake8-bugbear
# Checks for likely bugs and design problems

# flake8-comprehensions  
# Helps you write better list/set/dict comprehensions

# flake8-simplify
# Helps write simpler Python code
