# ============================================
# CONFIGURACIÓN DJANGO
# ============================================
# Genera una clave secreta única para producción
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG=False en producción
DEBUG=True

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# BASE DE DATOS
# ============================================
# Railway proporciona DATABASE_URL automáticamente al agregar PostgreSQL
# Para desarrollo local con SQLite, dejar comentado
# DATABASE_URL=postgresql://user:password@localhost:5432/seguros_db

# ============================================
# SEGURIDAD (PRODUCCIÓN)
# ============================================
# Habilitar en producción con HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Orígenes confiables para CSRF (Railway lo detecta automáticamente)
# CSRF_TRUSTED_ORIGINS=https://tu-app.railway.app

# ============================================
# EMAIL - ENVÍO (SMTP)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-de-gmail

DEFAULT_FROM_EMAIL=seguros@utpl.edu.ec
SERVER_EMAIL=seguros@utpl.edu.ec

# ============================================
# EMAIL - LECTURA IMAP (Recepción de siniestros)
# ============================================
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_EMAIL=tu-email@gmail.com
IMAP_PASSWORD=tu-app-password-de-gmail
IMAP_USE_SSL=True

# ============================================
# SITE URL
# ============================================
# URL base del sitio (para links en emails)
SITE_URL=https://tu-app.railway.app

# ============================================
# CELERY & REDIS
# ============================================
# Railway proporciona REDIS_URL al agregar Redis
CELERY_BROKER_URL=redis://localhost:6379/0

# ============================================
# LOGGING
# ============================================
DJANGO_LOG_LEVEL=INFO
